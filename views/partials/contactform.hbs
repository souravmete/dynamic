<section id="contact_us_section" class="pt-5 background1 ">


    <div class="container">
      <h3 class="text-center text-secondary">Contact Us</h3>
      <div class="row">
        <div class="col-md-12">



          <form action="/process-contact-form" method="post">

            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label"> Email address</label>
              <input name="email"  type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>


            <div class="mb-3">
              <label  for="contactNumberField" class="form-label"> Contact Number</label>
              <input name="number" type="number" class="form-control" id="contactNumberField">
            </div>


            <div class="form-floating my-2">
              <textarea name="query" style="height: 259px;" class="form-control" placeholder="Enter your query here"
                id="queryField"></textarea>
              <label for="queryField" class="background2">Your query</label>
            </div>


            <div class="container text-center mt-4 mb-4">
              <button type="submit" class="btn btn-success">Submit</button>
            </div>


          </form>



        </div>
      </div>
    </div>

  </section>
